{% extends 'base.html.twig' %}

{% block title %}Autentificare{% endblock %}

{% block body %}

    <section class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="card shadow border-0">
                    <div class="card-body p-4 p-md-5">
                        <h1 class="h3 mb-4 fw-normal text-center">Autentificare</h1>

                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}

                            {% if app.user %}
                                <div class="alert alert-info mb-3">
                                    Ești deja autentificat ca {{ app.user.userIdentifier }}
                                </div>
                            {% endif %}

                            <div class="mb-3">
                                <label for="inputEmail" class="form-label">Email</label>
                                <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                       class="form-control"
                                       placeholder="Introdu email-ul"
                                       autocomplete="email" required autofocus>
                            </div>

                            <div class="mb-3">
                                <label for="inputPassword" class="form-label">Parolă</label>
                                <input type="password" name="password" id="inputPassword"
                                       class="form-control"
                                       placeholder="Introdu parola"
                                       autocomplete="current-password" required>
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                            </div>

                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input type="checkbox" name="_remember_me" id="remember" class="form-check-input">
                                    <label for="remember" class="form-check-label">Ține-mă minte</label>
                                </div>
                                <a href="{{ path('app_forgot_password_request') }}" class="text-decoration-none">
                                    Ai uitat parola?
                                </a>
                            </div>

                            <button class="btn btn-primary btn-lg w-100" type="submit">
                                Autentificare
                            </button>

                            <div class="mt-3 text-center">
                                <p class="text-muted">
                                    Nu ai cont încă? <a href="{{ path('app_registration') }}"
                                                        class="text-decoration-none">Înregistrează-te</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}