{% extends 'base.html.twig' %}

{% block title %}Holiday {{ concedii.id }}{% endblock %}

{% block body %}

        <p>Nume:  {{ concedii.userId.lastName }}</p>

        <p>Prenume: {{ concedii.userId.firstName }} </p>

        <p>De la: {{ concedii.getStartDate|date("d.M.Y")}}</p>

        <p>Pana la: {{ concedii.getEndDate|date("d.M.Y")}}</p>

        <p>Detalii: {{ concedii.details }}</p>

        <form method="post" action="{{ path('app_pending_approved', {'id': concedii.id}) }}">
                <label>
                        <button type="submit" onclick="return confirm('Are you sure you want to approve?')" class="text-center block w-full shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">Aprobare</button>
                </label>
        </form>

        <form method="post" action="{{ path('app_pending_denied', {'id': concedii.id}) }}">
        <label>
                <button type="submit" onclick="return confirm('Are you sure you want to deny?')" class="text-center block w-full shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">Respinge</button>
                <input type="text" id="deny" required name="deny" placeholder="Detalii respingere..." class="block w-full p-4 text-gray-900 border border-gray-300 rounded-lg bg-gray-50 sm:text-md focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
        </label>
        </form>

{% endblock %}