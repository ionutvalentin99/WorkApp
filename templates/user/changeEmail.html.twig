{% extends 'base.html.twig' %}
{% block title %}Work App | Settings{% endblock %}

{% block body %}
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@300;400;600;700&display=swap"
          rel="stylesheet"/>

    <div class="flex justify-center bg-gray-800 px-4 pt-12 text-center">
        <div class="w-full max-w-screen-md bg-gray-900 rounded-xl shadow-lg p-8 text-gray-100">

            <div class="">

                <!-- EMAIL CHANGE FORM -->
                <form action="{{ path('app_change_email') }}" method="post"
                      class="flex flex-col items-center space-y-6">
                    <div class="w-full">
                        <p class="py-2 text-xl font-semibold">Enter your new email:</p>
                    </div>

                    <div class="w-full">
                        <label for="new-email" class="block text-center">
                            <span class="text-sm text-white"><strong>New Email</strong></span>
                            <div class="relative flex overflow-hidden rounded-md border-2 focus-within:border-blue-600">
                                <input type="email" name="new-email" required
                                       class="w-full appearance-none border-gray-300 bg-white py-2 px-4 text-base text-gray-700 placeholder-gray-400 focus:outline-none"
                                       placeholder="Type your new email..."/>
                            </div>
                        </label>
                    </div>

                    <div class="w-full">
                        <label for="confirm-email" class="block text-center">
                            <span class="text-sm text-white"><strong>Confirm Email</strong></span>
                            <div class="relative flex overflow-hidden rounded-md border-2 focus-within:border-blue-600">
                                <input type="email" name="confirm-email" required
                                       class="w-full appearance-none border-gray-300 bg-white py-2 px-4 text-base text-gray-700 placeholder-gray-400 focus:outline-none"
                                       placeholder="Confirm your new email..."/>
                            </div>
                        </label>
                    </div>

                    <div class="w-full">
                        <button type="submit" class="mt-4 w-full rounded-lg bg-blue-600 px-4 py-2 text-white"
                                id="reset-password-button">Save
                        </button>
                    </div>
                </form>
                <!-- EMAIL CHANGE END FORM -->
            </div>
        </div>
    </div>

{% endblock %}