<nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
    <div class="container-fluid">
        <a class="navbar-brand d-flex align-items-center" href="{{ path('app_home') }}">
            <img src="https://flowbite.com/docs/images/logo.svg" alt="Flowbite Logo" height="32" class="me-2">
            <span class="fs-4 fw-semibold">Work App</span>
        </a>

        {% if app.user %}
            {% if app.user.verified == 0 %}
                <div class="text-danger me-3">
                    <a href="{{ path('app_send_email_verification') }}">Your email is not verified, click to send a confirmation link!</a>
                </div>
            {% endif %}
        {% endif %}

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
            {% if not app.user %}
                <div class="d-flex gap-2">
                    <a href="{{ path('app_login') }}" class="btn btn-primary">Sign in</a>
                    <a href="{{ path('app_registration') }}" class="btn btn-outline-primary">
                        <span class="d-md-none">Sign up</span>
                        <span class="d-none d-md-inline d-lg-none">Create account</span>
                        <span class="d-none d-lg-inline">Create an account</span>
                    </a>
                </div>
            {% endif %}

            {% if app.user %}
                <ul class="navbar-nav ms-3">
                    <!-- Company Dropdown -->
                    <li class="nav-item dropdown">
                        <button class="btn btn-outline-primary dropdown-toggle" id="companyDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            Company
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="companyDropdown">
                            {% if app.user.company %}
                                <li><a class="dropdown-item" href="{{ path('app_company') }}">{{ app.user.company.name }}</a></li>
                            {% else %}
                                <li><a class="dropdown-item" href="{{ path('app_company_new') }}">Create New Company</a></li>
                            {% endif %}
                        </ul>
                    </li>

                    <!-- Profile Dropdown -->
                    <li class="nav-item dropdown ms-2">
                        <button class="btn btn-primary dropdown-toggle" id="profileDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            {{ app.user.firstName }}
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                            <li><a class="dropdown-item" href="{{ path('app_account_settings') }}">Settings</a></li>
                            <li><a class="dropdown-item" href="{{ path('app_logout') }}">Sign out</a></li>
                        </ul>
                    </li>
                </ul>
            {% endif %}
        </div>
    </div>
</nav>

{% if app.user and app.user.company %}
    <ul class="nav nav-tabs justify-content-center mt-3 border-bottom">
        <li class="nav-item">
            <a class="nav-link" href="{{ path('app_home') }}">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('app_pontaj') }}">Work Records</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ path('app_concediu') }}">Holidays</a>
        </li>
        {% if is_granted("ROLE_ADMIN") %}
            <li class="nav-item">
                <a class="nav-link" href="{{ path('app_user_crud_index') }}">Admin</a>
            </li>
        {% endif %}
    </ul>
{% elseif app.user %}
    <div class="mt-3 text-center">
        <span>You need to enroll to a company or create a new one</span>
        <a href="{{ path('app_company_new') }}">here</a>.
    </div>
{% endif %}
